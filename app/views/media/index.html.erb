<table class="table">
  <h2>Media Types</h2>

    <th>Name</th>
    <th></th>
    <th></th>
  <tbody>
    <% @media.each do |medium| %>
    <tr>
      <td>  <%= medium.name %> </td>
      <td><%= link_to "Edit", edit_medium_path(medium.id) %></td>
      <td><%= link_to medium_path(medium.id), method: :delete, class: "delete" do %>
       <%= fa_icon("trash-o") %> <span>delete</span>
       <% end %>
    </td>
    </tr>
    <% end %>
    <tr></tr>

  </tbody>

</table>

<%= button_to "Add Media Type", new_medium_path, method: :get, class: "btn btn-primary" %>

<%=  paginate @media %>
